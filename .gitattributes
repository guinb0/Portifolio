# Python
*.py linguist-detectable=true

# HTML Templates
*.html linguist-detectable=true

# CSS
*.css linguist-detectable=true

# JavaScript
*.js linguist-detectable=true

# Documentation
*.md linguist-documentation=true linguist-detectable=false

# SQLite Database - exclude from language stats
*.sqlite3 linguist-vendored=true
*.db linguist-vendored=true

# Django admin static files - exclude from language stats
staticfiles/admin/** linguist-vendored=true

# Media files - exclude
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.svg binary
*.ico binary

# Python bytecode - exclude
*.pyc linguist-generated=true
__pycache__/** linguist-generated=true

# Migrations - keep detectable as Python
**/migrations/*.py linguist-detectable=true linguist-language=Python
